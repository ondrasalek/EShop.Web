@using Salek.EShop.Web.Areas.Admin.Controllers
@model CarouselItem

@{
    if (!String.IsNullOrWhiteSpace(ViewBag.Action))
    {
        <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            @{
                if (ViewBag.Action == nameof(CarouselController.Edit))
                {
                    <input type="hidden" asp-for="Id" class="form-control" />
                }
            }

            <div class="form-group">
                <label asp-for="Image">Image Source</label>
                <input id="fileupload" asp-for="Image" class="form-control-file" accept="image/*" placeholder="Enter Image Source">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageAlt">Image Alt</label>
                <input asp-for="ImageAlt" type="text" class="form-control" placeholder="Enter Image Alt">
                <span asp-validation-for="ImageAlt" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/validation/FileContentTypeValidation.js"></script>
}