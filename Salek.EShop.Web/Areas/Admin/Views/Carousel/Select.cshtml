@model IList<CarouselItem>
@{
    ViewData["Title"] = "Carousel Item";
}
<h1>@ViewData["Title"]</h1>

<p>This page shows all Carousel Items for admin.</p>

<p><a class="btn btn-primary" role="button" asp-action="Create">Create new Carousel Item</a></p>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-responsive table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Image Source</th>
                <th scope="col">Image Alt</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; ++i)
            {

                <tr>
                    <th scope="row">@Model[i].Id</th>
                    <td><img style="max-height: 32px" src="@Model[i].ImageSource" alt="@Model[i].ImageAlt"></td>
                    <td class="text-truncate"><a href="@Model[i].ImageSource">@Model[i].ImageSource</a></td>
                    <td class="text-truncate">@Model[i].ImageAlt</td>
                    <td><a asp-action="Edit" asp-route-Id="@Model[i].Id">Edit</a> <a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return confirmDelete();">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Carousel is empty.</p>
}

@section Scripts
{
    <script src="~/js/alerts.js"></script>
} 